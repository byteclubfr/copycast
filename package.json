{
  "name": "copycast",
  "version": "3.0.0",
  "description": "Live remote copy-pasta explorer for training sessions ",
  "bin": {
    "copycast": "bin/copycast.js"
  },
  "scripts": {
    "assets": "npm run octicons && npm run hl && npm run hl-list",
    "postinstall": "npm run octicons && npm run hl",
    "prepublish": "npm run build",
    "prebuild": "npm run assets",
    "build": "browserify client/index.js -t babelify -t uglifyify | uglifyjs - -o client/bundle.js",
    "hl": "cpx 'node_modules/highlight.js/styles/*.css' client/hl-themes",
    "hl-list": "babel-node bin/hl-list.js",
    "lint": "eslint server && eslint client --ignore-path .gitignore",
    "octicons": "cpx 'node_modules/octicons/octicons/*.*' client/octicons",
    "start": "node ./bin/copycast.js",
    "prewatch": "npm run assets",
    "watch": "watchify client/index.js --debug -o client/bundle.js -t babelify"
  },
  "files": [
    "bin",
    "client/bundle.js",
    "client/index.css",
    "client/index.html",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmtm/copycast.git"
  },
  "bugs": {
    "url": "https://github.com/lmtm/copycast/issues"
  },
  "homepage": "https://github.com/lmtm/copycast#readme",
  "author": "Delapouite <delapouite@gmail.com> (http://delapouite.com)",
  "license": "ISC",
  "dependencies": {
    "@cycle/core": "^6.0.3",
    "@cycle/dom": "^9.1.0",
    "@cycle/isolate": "^1.2.0",
    "@cycle/storage": "^2.0.3",
    "chokidar": "^1.4.3",
    "clipboard": "^1.5.9",
    "compression": "^1.6.1",
    "cpx": "^1.3.1",
    "debug": "^2.2.0",
    "easy-zip": "0.0.4",
    "finalhandler": "^0.4.1",
    "highlight.js": "^9.2.0",
    "html-to-vdom": "^0.7.0",
    "localtunnel": "^1.8.1",
    "mime-types": "^2.1.10",
    "minimist": "^1.2.0",
    "octicons": "^3.5.0",
    "parse-domain": "^0.2.1",
    "rx": "^4.1.0",
    "serve-static": "^1.10.2",
    "showdown": "^1.3.0",
    "socket.io": "^1.4.5",
    "virtual-dom": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^2.3.0",
    "uglify-js": "^2.6.2",
    "uglifyify": "^3.0.1",
    "watchify": "^3.7.0"
  }
}
